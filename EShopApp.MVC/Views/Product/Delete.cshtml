@model ProductResponseModel
<h1>Are you sure you want to delete?</h1>
<form asp-action="delete" asp-controller="Product">
    <div>
        <label>Name</label>
        <input type="text" disabled value="@Model.Name" name="Name" class="form-control" />
        <label>Description</label>
        <input type="text" disabled value="@Model.Description" name="Description" class="form-control" />
        <label for="Category">Category</label>
        <input type="number" disabled name="CategoryId" value="@Model.Category.Name" class="form-control" />
        <label for="Price">Price</label>
        <input type="number" disabled name="Price" value="@Model.Price" class="form-control" />
        <input type="hidden" name="Id" value="@Model.Id" />
    </div>
    <button class="btn btn-danger">Delete</button>
</form>