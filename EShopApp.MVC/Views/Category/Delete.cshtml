@model ProductCategoryResponseModel
<h1>Are you sure you want to delete the category? </h1>
<p>You must remove all products from the category before deletion.</p>
<form asp-action="delete" asp-controller="category">
    <div>
        <label>Name</label>
        <input type="text" disabled value="@Model.Name" name="Name" class="form-control" />
        <input type="hidden" value="@Model.Id" name="Id" />
    </div>
    <button class="btn btn-danger">Delete</button>

</form>