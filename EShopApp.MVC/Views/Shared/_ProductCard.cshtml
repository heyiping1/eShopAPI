@model ProductResponseModel
<div class="card" style="width: 18rem;">
    <img src="@Model.ProductImage" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: @Model.Price</p>
        <a asp-action="Detail" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
        <br />
        <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-link">Edit</a> 
        <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-link">Delete</a>
    </div>
</div>