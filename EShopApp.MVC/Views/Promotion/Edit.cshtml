@model PromotionResponseModel
<form asp-action="Edit" asp-controller="Promotion">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
        <label for="Description">Description</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
        <label for="Discount">Discount</label>
        <input type="number" name="Discount" value="@Model.Discount" class="form-control" />
        <label for="StartDate">Start Date</label>
        <input type="datetime" name="StartDate" value="@Model.StartDate" class="form-control" />
        <label for="EndDate">End Date</label>
        <input type="datetime" name="EndDate" value="@Model.EndDate" class="form-control" />
        <input type="hidden" name="Id" value="@Model.Id" />
    </div>
    <button class="btn-primary btn">Update</button>
</form>

