@model IEnumerable<PromotionResponseModel>
<h1>Promotion List</h1>
<a asp-action="Create" asp-controller="Promotion">Add New Promotion</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Discount</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <Td>@item.Id</Td>
                <td>@item.Name</td>
                <td>@item.Discount</td>
                <td>
                    <a asp-action="Detail" asp-controller="Promotion" asp-route-id="@item.Id">View Details</a> |
                    <a asp-action="Edit" asp-controller="Promotion" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="Promotion" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>