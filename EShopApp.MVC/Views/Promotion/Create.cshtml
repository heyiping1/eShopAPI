@model PromotionRequestModel

<form asp-action="Create" asp-controller="Promotion">
    <div class="form-group box-div">
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" />
        <label for="Description">Description</label>
        <input type="text" name="Description" class="form-control" />
        <label for="Discount">Discount</label>
        <input type="number" name="Discount" class="form-control" />
        <label for="StartDate">Start Date</label>
        <input type="datetime" name="StartDate" class="form-control" />
        <label for="EndDate">End Date</label>
        <input type="datetime" name="EndDate" class="form-control" />

    </div>
    <button class="btn-primary btn">Save</button>
</form>